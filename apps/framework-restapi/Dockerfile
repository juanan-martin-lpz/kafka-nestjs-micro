# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build sample`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t sample`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system sample && \
          adduser --system -G sample sample

COPY dist/apps/sample sample
RUN chown -R sample:sample .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix sample --omit=dev -f install

EXPOSE 3000

CMD [ "node", "sample" ]
