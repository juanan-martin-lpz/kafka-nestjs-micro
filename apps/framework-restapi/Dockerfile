# Run the container with `docker run -p 3000:3000 -t framework-restapi`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system framework-restapi && \
          adduser --system -G framework-restapi framework-restapi

COPY dist/apps/framework-restapi framework-restapi
RUN chown -R framework-restapi:framework-restapi .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix framework-restapi --omit=dev -f install

EXPOSE 3000

CMD [ "node", "framework-restapi" ]
